<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.exploreoffline.ui.home.fragmenthome"
        android:label="Home"
        tools:layout="@layout/fragment_fragmenthome"
        />
    <fragment
        android:id="@+id/navigation_map"
        android:name="com.example.exploreoffline.ui.map.fragmentmap"
        android:label="Map"
        tools:layout="@layout/fragment_fragmenthome"
        />
    <fragment
        android:id="@+id/navigation_route"
        android:name="com.example.exploreoffline.ui.route.fragmentroute"
        android:label="Routes"
        tools:layout="@layout/fragment_fragmenthome"
        />
    <fragment
        android:id="@+id/navigation_gallery"
        android:name="com.example.exploreoffline.ui.gallery.fragmentgallery"
        android:label="Gallery"
        tools:layout="@layout/fragment_fragmenthome"
        />
</navigation>